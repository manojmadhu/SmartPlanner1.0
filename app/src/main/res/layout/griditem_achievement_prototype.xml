<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_grid">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="10px">


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <!--<TextView-->
            <!--android:id="@+id/grid_item_week"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="3px"-->
            <!--android:text="Week "-->
            <!--android:textColor="#37474F"-->
            <!--&gt;</TextView>-->



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <TextView
                    android:id="@+id/grid_item_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3px"
                    android:text="Week "
                    android:textColor="#37474F"
                    ></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <TextView
                    android:id="@+id/grid_item_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3px"
                    android:layout_marginLeft="10px"
                    android:textColor="#37474F"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>




        <TextView
            android:id="@+id/lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorsilver"
            android:layout_marginTop="5px"
            android:text="Company Target"/>

        <TextView
            android:id="@+id/grid_item_week_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5px"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="monospace"
            android:text="0.00"
            />


        <TextView
            android:id="@+id/lbl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:text="My Achievement"
            android:textColor="@color/colorsilver" />

        <TextView
            android:id="@+id/grid_item_week_value_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5px"
            android:textColor="@color/colorteal"
            android:fontFamily="monospace"
            android:text="0.00"
            />


        <TextView
            android:id="@+id/lbl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorsilver"
            android:layout_marginTop="5px"
            android:text="Percentage"/>

        <TextView
            android:id="@+id/grid_item_week_precentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5px"
            android:textColor="@color/colorQuora"
            android:fontFamily="monospace"
            android:textSize="25dp"
            android:text="0.00"
            />

    </LinearLayout>


</LinearLayout>